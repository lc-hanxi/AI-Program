/**index.wxss**/
.container {
  width: 100%;
  padding: 20rpx 0; /* 只保留上下内边距 */
  margin: 0;
  background-color: #f5f5f5;
  min-height: 100vh;
  box-sizing: border-box;
}

/* 顶部操作区样式 */
.action-area {
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
}

.action-button {
  flex: 1;
  margin: 0 10rpx;
  height: 90rpx;
  line-height: 90rpx;
  border-radius: 45rpx;
  font-size: 32rpx;
  font-weight: bold;
  padding: 0;
}

.primary {
  background-color: #4CAF50;
  color: white;
}

.secondary {
  background-color: white;
  color: #4CAF50;
  border: 2rpx solid #4CAF50;
}

.button-text {
  display: inline-block;
  vertical-align: middle;
}

/* 区块样式 */
.section {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  width: 100vw;
  box-sizing: border-box;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

/* 训练模板列表样式 */
.template-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 0 10rpx;
}

.template-item {
  width: 48%;
  margin-bottom: 20rpx;
  padding: 20rpx;
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  box-sizing: border-box;
}

.template-icon {
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
}

.template-info {
  flex: 1;
}

.template-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 6rpx;
}

.template-desc {
  font-size: 24rpx;
  color: #999;
}

/* 最近训练列表样式 */
.workout-list {
  width: 100vw;
  display: flex;
  flex-direction: column;
  padding: 0;
  margin: 10rpx 0 0 0;
  box-sizing: border-box;
}

.workout-item {
  display: flex;
  align-items: center;
  width: 100%;
  padding: 20rpx 20rpx;
  margin-bottom: 12rpx;
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  box-sizing: border-box;
}

.workout-item:last-child {
  margin-bottom: 0;
}

.workout-info {
  flex: 1;
}

.workout-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 6rpx;
}

.workout-meta {
  font-size: 24rpx;
  color: #999;
}

/* 提示区样式 */
.tip-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.tip-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.tip-text {
  font-size: 32rpx;
  color: #999;
}