/* pages/statistics/statistics.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
  box-sizing: border-box;
}

.section {
  margin-bottom: 30rpx;
  background-color: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.chart-container {
  width: 100vw; /* 使用视窗宽度 */
  height: 300px;
  position: relative;
  margin-left: -20rpx; /* 抵消页面padding */
  margin-right: -20rpx;
  box-sizing: content-box;
}

canvas {
  width: 100% !important;
  height: 100% !important;
  display: block;
}