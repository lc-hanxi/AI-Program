/* pages/training/history/history.wxss */
.container {
  padding: 0;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 月份选择器样式 */
.month-selector {
  width: 100%;
  background-color: #4CAF50;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
}

.month-picker {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 80rpx;
  background-color: rgba(255, 255, 255, 0.1);
  border-radius: 40rpx;
  color: #fff;
}

.month-text {
  font-size: 32rpx;
  font-weight: bold;
  margin-right: 10rpx;
}

.month-arrow {
  font-size: 24rpx;
  opacity: 0.8;
}

/* 训练历史列表样式 */
.history-list {
  padding: 20rpx;
}

.workout-item {
  display: flex;
  align-items: flex-start;
  background-color: #fff;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.workout-date {
  width: 120rpx;
  font-size: 28rpx;
  color: #666;
  text-align: center;
  padding-top: 10rpx;
}

.workout-content {
  flex: 1;
  margin-left: 20rpx;
}

.workout-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
}

.workout-stats {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  background-color: #f8f8f8;
  padding: 15rpx;
  border-radius: 8rpx;
}

.stat-item {
  margin-right: 40rpx;
  text-align: center;
}

.stat-value {
  font-size: 28rpx;
  font-weight: bold;
  color: #4CAF50;
  display: block;
  margin-bottom: 4rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #999;
}

/* 空状态样式 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 点击效果 */
.workout-item:active {
  opacity: 0.8;
  transform: scale(0.98);
  transition: all 0.2s;
}