/* pages/training/workout/workout.wxss */
.container {
  width: 100%;
  padding: 0;
  margin: 0;
  background-color: #f5f5f5;
  min-height: 100vh;
  box-sizing: border-box;
}

/* 训练头部样式 */
.workout-header {
  width: 100%;
  background-color: #4CAF50;
  padding: 30rpx;
  color: #fff;
  box-sizing: border-box;
}

.workout-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.workout-progress {
  font-size: 28rpx;
  opacity: 0.9;
}

/* 当前动作样式 */
.current-exercise {
  width: 100%;
  background-color: #fff;
  padding: 40rpx 30rpx;
  text-align: center;
  margin-bottom: 20rpx;
  box-sizing: border-box;
}

.exercise-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  background-color: #f0f0f0;
}

.exercise-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.exercise-muscle {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 30rpx;
}

.set-info {
  background-color: #f8f8f8;
  padding: 20rpx;
  border-radius: 10rpx;
}

.set-label {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-right: 20rpx;
}

.rep-label {
  font-size: 28rpx;
  color: #666;
}

/* 休息计时器样式 */
.rest-timer {
  background-color: #fff;
  padding: 40rpx 30rpx;
  text-align: center;
  margin-bottom: 20rpx;
}

.timer-label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.timer-value {
  font-size: 60rpx;
  font-weight: bold;
  color: #4CAF50;
  margin-bottom: 30rpx;
}

.skip-button {
  width: 200rpx;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 28rpx;
  color: #4CAF50;
  background-color: #fff;
  border: 2rpx solid #4CAF50;
  border-radius: 35rpx;
}

/* 组进度指示器样式 */
.set-progress {
  display: flex;
  justify-content: center;
  padding: 20rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
}

.set-indicator {
  width: 20rpx;
  height: 20rpx;
  border-radius: 10rpx;
  background-color: #e0e0e0;
  margin: 0 10rpx;
}

.set-indicator.completed {
  background-color: #4CAF50;
}

.set-indicator.current {
  background-color: #FF9800;
}

/* 动作列表样式 */
.exercise-list {
  width: 100%;
  height: 60vh; /* 设置固定高度 */
  padding: 0 20rpx;
  box-sizing: border-box;
  overflow-y: auto; /* 启用垂直滚动 */
  -webkit-overflow-scrolling: touch; /* 启用弹性滚动 */
}

.section-title {
  width: 100%;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
  box-sizing: border-box;
}

.exercise-item {
  width: 100%;
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  padding: 25rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  box-sizing: border-box;
}

.exercise-item.completed {
  opacity: 0.7;
}

.exercise-item.current {
  border: 2rpx solid #4CAF50;
}

.exercise-header {
  display: flex;
  align-items: center;
}

.exercise-status {
  margin-right: 20rpx;
}

.status-text {
  font-size: 24rpx;
  color: #999;
}

.status-text.current {
  color: #4CAF50;
}

.exercise-info {
  flex: 1;
}

.exercise-name-small {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 6rpx;
}

.exercise-sets {
  font-size: 24rpx;
  color: #999;
}

/* 完成按钮样式 */
.action-area {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx 30rpx;
  background-color: #fff;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.complete-button {
  background-color: #4CAF50;
  color: #fff;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 45rpx;
}

/* 训练完成样式 */
.completion-container {
  padding: 60rpx 30rpx;
  text-align: center;
}

.completion-icon {
  font-size: 80rpx;
  margin-bottom: 30rpx;
}

.completion-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 40rpx;
}

.completion-stats {
  display: flex;
  justify-content: space-around;
  margin-bottom: 60rpx;
}

.stat-item {
  text-align: center;
}

.stat-value {
  font-size: 48rpx;
  font-weight: bold;
  color: #4CAF50;
  display: block;
  margin-bottom: 10rpx;
}

.stat-label {
  font-size: 28rpx;
  color: #666;
}

.finish-button {
  background-color: #4CAF50;
  color: #fff;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 45rpx;
  width: 80%;
  margin: 0 auto;
}