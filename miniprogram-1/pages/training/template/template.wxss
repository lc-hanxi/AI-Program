/* pages/training/template/template.wxss */
.container {
  width: 100%;
  padding: 0;
  margin: 0;
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 120rpx;
  box-sizing: border-box;
}

/* 模板信息头部样式 */
.template-header {
  width: 100%;
  padding: 40rpx 30rpx;
  color: #fff;
  box-sizing: border-box;
}

.template-title {
  width: 100%;
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  box-sizing: border-box;
}

.template-description {
  width: 100%;
  font-size: 28rpx;
  opacity: 0.9;
  margin-bottom: 30rpx;
  box-sizing: border-box;
}

.template-meta {
  display: flex;
  justify-content: space-between;
  background-color: rgba(255, 255, 255, 0.2);
  border-radius: 10rpx;
  padding: 20rpx;
}

.meta-item {
  text-align: center;
  flex: 1;
}

.meta-label {
  font-size: 24rpx;
  opacity: 0.8;
  display: block;
  margin-bottom: 6rpx;
}

.meta-value {
  font-size: 28rpx;
  font-weight: bold;
}

/* 训练动作列表样式 */
.exercise-list {
  width: 100%;
  padding: 0 20rpx;
  margin-bottom: 20rpx;
  box-sizing: border-box;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.exercise-item {
  width: 100%;
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  overflow: hidden;
  box-sizing: border-box;
}

.exercise-header {
  display: flex;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.exercise-image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 10rpx;
  margin-right: 20rpx;
  background-color: #f0f0f0;
}

.exercise-info {
  flex: 1;
}

.exercise-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 6rpx;
}

.exercise-muscle {
  font-size: 24rpx;
  color: #999;
}

.exercise-details {
  display: flex;
  padding: 20rpx;
  background-color: #fafafa;
}

.detail-item {
  flex: 1;
  text-align: center;
}

.detail-label {
  font-size: 24rpx;
  color: #999;
  display: block;
  margin-bottom: 6rpx;
}

.detail-value {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

/* 底部操作区样式 */
.action-area {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx 30rpx;
  background-color: #fff;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.1);
  z-index: 100;
}

.start-button {
  background-color: #4CAF50;
  color: #fff;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 45rpx;
}